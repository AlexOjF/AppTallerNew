@page
@model Taller.App.Front.Pages.RegisterModel
@{
    <form class="card" style="background-color:#d3ecf2; padding: 10px; border:1px solid black ">

        <fieldset disabled>
            <legend>Registro Propietario</legend>
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-5">
                        <div class="mb-3">
                            <label for="Ciudad" class="form-label">ID (*)</label>
                            <select id="Ciudad" class="form-select">
                                <option>Seleccione Tipo ID</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Nombre" class="form-label">Nombres (*)</label>
                            <input type="text" id="Nombre" class="form-control" placeholder="Nombre">
                        </div>
                        <div class="mb-3">
                            <label for="Direccion" class="form-label">Dirección (*)</label>
                            <input type="text" id="NumeroId" class="form-control" placeholder="Avenida pepito # 35-22">
                        </div>
                        <label for="start">Fecha de nacimiento (*)</label>
                        <input type="date" id="fechaNacimiento" name="trip-start" value="2022-09-07">
                        <br />
                        <br />
                        <div class="mb-3">
                            <label for="NumeroId" class="form-label">Correo (*)</label>
                            <input type="text" id="email" class="form-control" placeholder="example@example.com">
                        </div>
                        <!-- Contraseña-->
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="ingresoContrasena" class="col-form-label">Contraseña (*)</label>
                            </div>
                            <div class="col-auto">
                                <input type="password" id="ingresoContrasena" class="form-control"
                                    aria-describedby="passwordHelpInline">
                            </div>
                            <div class="col-auto">
                                <span id="passwordHelpInline" class="form-text">
                                    Debe contener mínimo 8 caracteres, debe incluir una Mayúscula y un número.
                                </span>
                            </div>
                        </div>

                    </div>
                    <div class="col-5">
                        <div class="mb-3">
                            <label for="NumeroId" class="form-label">Numero Identificación (*)</label>
                            <input type="text" id="NumeroId" class="form-control" placeholder="9999999999">
                        </div>
                        <div class="mb-3">
                            <label for="Apellido" class="form-label">Apellidos (*)</label>
                            <input type="text" id="Apellido" class="form-control" placeholder="Apellido">
                        </div>
                        <div class="mb-3">
                            <label for="Apellido" class="form-label">Telefono (*)</label>
                            <input type="text" id="telefono" class="form-control" placeholder="3105555555">
                        </div>
                        <div class="mb-3">
                            <label for="Ciudad" class="form-label">Ciudad (*)</label>
                            <select id="Ciudad" class="form-select">
                                <option>Escoja su sede</option>
                            </select>
                        </div>
                        <br />
                        <br />
                        <!-- ConfirContraseña-->
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="confirmacionContrasena" class="col-form-label">Confirmar Contraseña</label>
                            </div>
                            <div class="col-auto">
                                <input type="password" id="" class="form-control" aria-describedby="passwordHelpInline">
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Registrar</button>
            </div>
        </fieldset>
    </form>

    <form class="card" style="margin-top: 10px; background-color:#d3ecf2; padding: 10px; border:1px solid black">

        <fieldset disabled>
            <legend>Registro Vehiculo</legend>
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-5">
                        <div class="mb-3">
                            <label for="Placa" class="form-label">Placa (*)</label>
                            <input type="text" id="Placa" class="form-control" placeholder="ZZZ000">
                        </div>
                        <div class="mb-3">
                            <label for="Marca" class="form-label">Marca (*)</label>
                            <input type="text" id="Marca" class="form-control" placeholder="Tesla">
                        </div>
                        <div class="mb-3">
                            <label for="Linea" class="form-label">Línea (*)</label>
                            <input type="text" id="Linea" class="form-control" placeholder="Model x">
                        </div>
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="Modelo" class="col-form-label">Modelo (*)</label>
                                <input type="text" id="Modelo" class="form-control" placeholder="2022">

                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="mb-3">
                            <label for="Cilindraje" class="form-label">Cilindraje (*)</label>
                            <input type="text" id="Cilindraje" class="form-control" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="Capacidad" class="form-label">Capacidad (*)</label>
                            <input type="text" id="Capacidad" class="form-control" placeholder="">
                        </div>
                        <div class="mb-3">
                            <label for="Pais" class="form-label">Pais de Origen (*)</label>
                            <select id="Pais" class="form-select">
                                <option>Pais de Origen</option>
                            </select>
                        </div>
                        <br />
                        <br />
                    </div>
                </div>
                <br />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Registrar</button>
            </div>
        </fieldset>
    </form>
}
